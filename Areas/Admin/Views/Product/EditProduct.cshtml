@model Product
@{
    List<Category> categories = ViewBag.Categories as List<Category>;
}
<form class="browser-default-validation col-md-6" method="post">
        <div class="mb-3">
            <label class="form-label">Product Name</label>
            <input asp-for="Name" class="form-control" placeholder="John Doe" required />
        </div>
        <div class="mb-3">
            <label class="form-label" for="basic-default-avatar">Avatar</label>
            <input asp-for="Avatar" type="file" class="form-control" id="basic-default-avatar" required />
        </div>
        <div class="mb-3">
            <label class="form-label" for="basic-default-price">Price</label>
            <input asp-for="Price" type="number" class="form-control" id="basic-default-price" placeholder="Enter Price" required />
        </div>
        <div class="mb-3">
            <label class="form-label" for="basic-default-category">Category</label>
            <select asp-for="CategoryId" class="form-select" id="basic-default-category" required>
                <option value="">Select category</option>
                <option value="usa">USA</option>
                <option value="uk">UK</option>
                <option value="france">France</option>
                <option value="australia">Australia</option>
                <option value="spain">Spain</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" for="basic-default-brand">Brand</label>
        <select asp-for="BrandId" class="form-select" id="basic-default-brand" required>
                <option value="">Select brand</option>
                <option value="usa">USA</option>
                <option value="uk">UK</option>
                <option value="france">France</option>
                <option value="australia">Australia</option>
                <option value="spain">Spain</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" for="basic-default-shortdes">Short Description</label>
            <input asp-for="ShortDes" type="text" class="form-control flatpickr-validation" id="basic-default-shortdes" required />
        </div>
        <div class="mb-3">
            <label class="form-label" for="basic-default-fulldes">Full Description</label>
            <textarea asp-for="FullDescription" class="form-control" id="basic-default-fulldes" rows="3" required></textarea>
        </div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
