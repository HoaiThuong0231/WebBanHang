<div class="custom-breadcrumns border-bottom">
    <div class="container">
        <a href="/index.html">Home</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <span class="current">Register</span>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <form method="post">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="firstname">First name</label>
                            <input type="text" id="FirstName" name="FirstName" value="@Model.Data.FirstName" placeholder="Enter your first name" class="form-control form-control-lg">
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="lastname">Last name</label>
                            <input type="text" id="LastName" name="LastName" value="@Model.Data.LastName" placeholder="Enter your last name" class="form-control form-control-lg">
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="phone">Phone number</label>
                            <input type="text" id="Phone" name="Phone" value="@Model.Data.Phone" placeholder="Enter phone number" class="form-control form-control-lg">
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="address">Address</label>
                            <input type="text" id="Address" name="Address" value="@Model.Data.Address" placeholder="Enter address" class="form-control form-control-lg">
                        </div> 
                        <div class="col-md-12 form-group">
                            <label for="email">Email</label>
                            <input type="email" id="Email" name="Email" value="@Model.Data.Email" placeholder="Enter your email" class="form-control form-control-lg">
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="username">Username</label>
                            <input type="text" id="Username" name="Username" value="@Model.Data.Username" placeholder="Enter username" class="form-control form-control-lg">
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="Password">Password</label>
                            <input type="password" id="Password" name="Password" placeholder="Enter password" value="@Model.Data.Password" class="form-control form-control-lg">
                        </div>
@*                         <div class="col-md-12 form-group">
                            <label for="pword2">Re-type Password</label>
                            <input type="password" id="pword2" placeholder="Re-type Password" class="form-control form-control-lg">
                        </div> *@
                        <div class="col-12">
                            <input type="submit" value="Register" class="btn btn-primary btn-lg px-5">
                        </div>
                    </div> 
                </form>
            </div>
        </div>
    </div>
</div>