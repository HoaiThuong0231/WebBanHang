@model List<VCart>
<div class="custom-breadcrumns border-bottom">
    <div class="container">
        <a href="index.html">Home</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <a href="courses.html">Courses</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <span class="current">Courses</span>
    </div>
</div>
<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form action="" method="post">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Hình ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cart in Model)
                            {
                                <tr>
                                    <td class="imgPro">
                                        <center>
                                            <img src="@string.Concat("/images/",cart.Avatar)" style="width:80px; height:80px;" alt="Sản phẩm">
                                        </center>
                                    </td>
                                    <td>@cart.ProductName</td>
                                    <td>@cart.Price.ToUSD()</td>
                                    <td>
                                        <input class="text-center" type="number" value="@cart.Quantity" min="1" max="10" />
                                    </td>
                                    <td>1</td>
                                    <td>
                                        <center>
                                            <button type="button" class="btn btn-danger">
                                                <span class="icon-trash"></span>
                                            </button>
                                        </center>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tr>
                            <th colspan="5">Tổng cộng</th>
                            <th colspan="3">25$</th>
                        </tr>
                    </table>
                    <div class="p-2 text-end">
                        <p>
                            <a href="" type="submit" class="btn btn-success">Cập nhật</a>
                            <a href="" type="button" class="btn btn-success">Huỷ giỏ hàng</a>
                            <a href="/Payment" type="button" class="btn btn-success">Thanh toán</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>